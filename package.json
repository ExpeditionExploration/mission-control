{
    "name": "app",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev:client": "vite",
        "dev:server": "concurrently \"npm run build:server -- --watch\" \"nodemon dist/server.js\"",
        "build": "rm -rf dist && npm run build:client && npm run build:server",
        "deploy": "npm run build && ./deploy.sh root@nanopi-neo3.local",
        "build:client": "vite build",
        "build:server": "vite build --ssr src/server/server.ts",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "dependencies": {
        "@headlessui/react": "^2.1.2",
        "@heroicons/react": "^2.1.3",
        "awilix": "^10.0.2",
        "check-disk-space": "^3.4.0",
        "clsx": "^2.1.1",
        "inversify": "^6.0.2",
        "inversify-inject-decorators": "^3.1.0",
        "lucide-react": "^0.379.0",
        "mpegts.js": "^1.7.3",
        "opengpio": "^1.0.15",
        "openi2c": "^1.0.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "serve": "^14.2.3",
        "systeminformation": "^5.22.10",
        "tailwind-merge": "^2.3.0",
        "ws": "^8.17.0"
    },
    "devDependencies": {
        "@types/gulp": "^4.0.17",
        "@types/node": "^20.12.11",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@types/ws": "^8.5.10",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.19",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "gulp": "^5.0.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "postcss": "^8.4.38",
        "tailwindcss": "^3.4.3",
        "typescript": "^5.2.2",
        "vite": "^5.2.0",
        "vite-plugin-node-polyfills": "^0.21.0"
    }
}
