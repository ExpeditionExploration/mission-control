{
    "name": "vite-project",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "dev:client": "vite",
        "dev:server": "tsx watch src/server/server.ts",
        "build": "rm -rf dist && concurrently \"npm run build:client\" \"npm run build:server\"",
        "build:client": "tsc -b && vite build",
        "build:server": "tsc -b && vite build --ssr src/server/server.ts",
        "lint": "eslint .",
        "preview": "vite preview",
        "test": "jest",
        "start": "NODE_ENV=production forever start server.js",
        "start:dev": "NODE_ENV=production tsx watch server.js",
        "stop": "forever stop server.js",
        "deploy": "npm run build && ./deploy.sh root@192.168.1.101"
    },
    "dependencies": {
        "@headlessui/react": "^2.1.2",
        "awilix": "^10.0.2",
        "check-disk-space": "^3.4.0",
        "clsx": "^2.1.1",
        "forever": "^4.0.3",
        "lucide-react": "^0.429.0",
        "mpegts.js": "^1.7.3",
        "opengpio": "^1.0.15",
        "openi2c": "^1.0.8",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "serve": "^14.2.3",
        "systeminformation": "^5.23.5",
        "tailwind-merge": "^2.5.2",
        "vite-plugin-node-polyfills": "^0.22.0",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@golevelup/ts-jest": "^0.5.4",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.5.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/serve-handler": "^6.1.4",
        "@types/ws": "^8.5.12",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "eslint": "^9.9.0",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.9",
        "globals": "^15.9.0",
        "jest": "^29.7.0",
        "postcss": "^8.4.41",
        "tailwindcss": "^3.4.10",
        "ts-jest": "^29.2.5",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.17.0",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.0.1",
        "vite": "^5.4.1"
    }
}
