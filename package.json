{
    "name": "vite-project",
    "private": true,
    "version": "1.0.0",
    "license": "GPL",
    "type": "module",
    "scripts": {
        "dev": "node dev.mjs",
        "dev:client": "vite",
        "dev:server": "tsx watch src/server/server.ts",
        "build": "rm -rf dist && concurrently \"npm run build:client\" \"npm run build:server\"",
        "build:clean": "rm -rf dist",
        "build:client": "tsc -b && vite build",
        "build:server": "tsc -b && vite build --ssr src/server/server.ts",
        "lint": "eslint .",
        "preview": "vite preview",
        "test": "jest",
        "start": "NODE_ENV=production node dist/server.js",
        "start:dev": "NODE_ENV=production tsx watch server.js",
        "stop": "forever stop server.js",
        "deploy": "npm run build && ./deploy.sh root@192.168.1.105"
    },
